<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- namespace 속성은 현재 XML 파일을 나타내는 ID와 같은 정보 -->
<mapper namespace="com.jk.model.FreeArticleMapper">
	
	<!-- 게시판 리스트 -->
	<select id="freeList" parameterType="freeArticle" resultType="freeArticle">
		select * from jk.free_bulletin
		where fb_no = #{fb_no}
	</select>
	
	<!-- 게시글 보기 -->
	<select id="freeContent" parameterType="freeArticle" resultType="freeArticle">
		select * from jk.free_bulletin
		where fb_no = (#{fb_no}, #{fb_title}, #{member_id}, #{fb_content}, #{fb_count}, #{fb_c_date}, #{fb_u_date})
	</select>
	
	<!-- 게시글 작성 -->
	<insert id="freeWrite" parameterType="freeArticle">
		insert into jk.free_bulletin
		values (#{fb_no}, #{fb_title}, #{member_id}, #{fb_content}, #{fb_count}, now())
	</insert>
	
	<!-- 회원정보수정 -->
	<select id="freeUpdate" parameterType="freeArticle" resultType="freeArticle">
		update jk.free_bulletin set 
		fb_content = #{fb_content}
		where fb_no = #{fb_no}
	</select>
	
	<!-- 게시글 삭제 -->
	<delete id="freeDelete" parameterType="freeArticle">
		delete from jk.free_bulletin
		where fb_no = #{fb_no}
	</delete>

</mapper>









