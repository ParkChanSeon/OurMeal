<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- namespace 속성은 현재 XML 파일을 나타내는 ID와 같은 정보 -->
<mapper namespace="com.jk.model.FreeArticleMapper">
	
	<!-- 게시판 리스트 -->
	<select id="freeList" resultType="freeArticle">
		select * from free_bulletin
		order by fb_u_date DESC;
	</select>
	
	<!-- 게시글 보기 -->
	<select id="freeContent" parameterType="freeArticle" resultType="freeArticle">
		select * from free_bulletin
		where fb_no = #{fb_no}
	</select>
	
	<!-- 게시글 작성 -->
	<insert id="freeWrite" parameterType="freeArticle">
		insert into free_bulletin (fb_title, member_id, fb_content, fb_count, fb_c_date, fb_u_date)
		values (#{fb_title}, #{member_id}, #{fb_content}, 0, now(), now())
	</insert>
	
	<!-- 회원정보수정 -->
	<select id="freeUpdate" parameterType="freeArticle" resultType="freeArticle">
		update free_bulletin
		set fb_title = #{fb_title}, fb_content = #{fb_content}
		where fb_no = #{fb_no}
	</select>
	
	<!-- 게시글 삭제 -->
	<delete id="freeDelete" parameterType="freeArticle">
		delete from free_bulletin
		where fb_no = #{fb_no}
	</delete>

</mapper>









