<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- namespace 속성은 현재 XML 파일을 나타내는 ID와 같은 정보 -->
<mapper namespace="com.jk.model.MemberMapper">
	
	<select id="allRecord" resultType="member">
		select * 
		from jk.member
	</select>
	
	<!-- 마이페이지 -->
	<select id="myPage" parameterType="member" resultType="member">
		select * from jk.member
		where member_id = #{member_id}
	</select>
	
	<!-- 회원가입 -->
	<insert id="regist" parameterType="member">
		insert into jk.member
		values (#{member_id}, #{member_pw}, #{member_name}, #{member_email}, #{member_phone}, now(), #{member_sex}, now())
	</insert>
	
	<delete id="deleteOne" parameterType="member">
		delete from jk.member
		where member_id = #{member_id}
	</delete>

</mapper>









