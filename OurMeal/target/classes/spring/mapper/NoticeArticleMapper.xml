<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- namespace 속성은 현재 XML 파일을 나타내는 ID와 같은 정보 -->
<mapper namespace="com.jk.model.NoticeArticleMapper">
		
	<!-- 게시판 리스트 -->
	<select id="noticeList" parameterType="noticeArticle" resultType="noticeArticle">
		select * from jk.free_bulletin
		where fb_no = #{fb_no}
	</select>
	
	<!-- 게시글 보기 -->
	<select id="noticeContent" parameterType="noticeArticle" resultType="noticeArticle">
		select * from jk.free_bulletin
		where fb_no = (#{fb_no}, #{fb_title}, #{member_id}, #{fb_content}, #{fb_count}, #{fb_c_date}, #{fb_u_date})
	</select>
	
	<!-- 게시글 작성 -->
	<insert id="noticeWrite" parameterType="noticeArticle">
		insert into jk.free_bulletin
		values (#{fb_no}, #{fb_title}, #{member_id}, #{fb_content}, #{fb_count}, now())
	</insert>
	
	<!-- 회원정보수정 -->
	<select id="noticeUpdate" parameterType="noticeArticle" resultType="noticeArticle">
		update jk.free_bulletin set 
		fb_content = #{fb_content}
		where fb_no = #{fb_no}
	</select>
	
	<!-- 게시글 삭제 -->
	<delete id="noticeDelete" parameterType="noticeArticle">
		delete from jk.free_bulletin
		where fb_no = #{fb_no}
	</delete>

</mapper>









